<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <title>Nguyễn Văn Mạnh</title>
        </head>
    
        <title>Product Page</title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="./css/style.css">
        </head>
        <style>
        
        </style>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">My Store</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/" id="home">Trang chủ</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/shop" id="img_list">Sản phẩm</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="add_product">Thêm sản phẩm</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Product List -->
  <div class="container-fluid">
    <div class="row d-flex align-items-stretch" id="place">
      <% products.forEach(element => { %>
      
        <div class="col-md-3 h-100 py-3" >
          <div class="card">
            <a href="/product/<%= element.id %>">
              <img class="card-img-top img-fluid" src="./img/<%= element.imageURL %>" alt="<%= element.title %>" >
              <div class="card-body">
                  <h5 class="card-title"><%= element.title %> </h5>
                  <p class="card-text"><%= element.description %></p>
                  <p class="card-text">Price: $ <span class="price"><%= element.price %></span> </p>
                  <a  class="btn btn-primary buy">Buy Now</a>
              </div>
            </a>
            </div>
        </div>
    
      <% }) %>
    </div>
</div>

  <!-- Footer -->
  <footer class="bg-light py-3 fixed-bottom" >
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <p>&copy; 2023 MyStore, Inc. All rights reserved.</p>
        </div>
        <div class="col-md-6">
          <ul class="list-inline text-md-right">
            <li class="list-inline-item"><a href="#">Terms of Use</a></li>
            <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
            <li class="list-inline-item"><a href="#">Contact Us</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
        
        
</body>
</html>